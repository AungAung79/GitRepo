package storm.starter;

import org.rosuda.REngine.Rserve.RConnection;

import storm.starter.bolt.MTSA_AnalyzeBolt;
import storm.starter.spout.MTSA_TopicSpout;
import backtype.storm.Config;
import backtype.storm.LocalCluster;
import backtype.storm.topology.TopologyBuilder;
import backtype.storm.utils.Utils;

public class MTSATopology {
	public static void main(String[] args){
		try{
			//System.err.println(args.length);
			
			RConnection rc = new RConnection();
			rc.voidEval("library('forecast')");
			
			TopologyBuilder builder = new TopologyBuilder();
			builder.setSpout("spout", new MTSA_TopicSpout("0>1>2>3"));
			builder.setBolt("bolt", new MTSA_AnalyzeBolt(rc),3).shuffleGrouping("spout");
			
			Config conf = new Config();
			conf.setDebug(true);
			
			LocalCluster cluster = new LocalCluster();
			cluster.submitTopology("mtsa", conf, builder.createTopology());
			
			Utils.sleep(2000);
			
			rc.close();
			cluster.killTopology("mtsa");
			cluster.shutdown();
			
		}catch(Exception e){
			System.err.println(e.getMessage());
			System.exit(0);
		}
	}
}
